<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:XamarinPrvoPredavanje.ViewModels"
             xmlns:converters="clr-namespace:XamarinPrvoPredavanje.Converters"
             x:Class="XamarinPrvoPredavanje.Views.NoteView"
             x:DataType="viewmodels:NoteViewModel">
    <ContentPage.Resources>
        <converters:InvertedBooleanConverter x:Key="InvertedBooleanConverter"/>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Entry Grid.Row="0" Text="{Binding Title}" Placeholder="Enter note title"/>
            <Editor Grid.Row="1" Text="{Binding Description}" Placeholder="Enter note description"/>
            <Button Grid.Row="2" Command="{Binding SaveNoteCommand}" Text="Save"/>
            <Button Grid.Row="2" 
                    IsVisible="{Binding IsNewNote, Converter={StaticResource InvertedBooleanConverter}}"
                    Command="{Binding DeleteNoteCommand}"
                    Text="Delete"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>