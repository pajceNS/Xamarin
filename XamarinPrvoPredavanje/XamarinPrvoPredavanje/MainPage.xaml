             x:Class="XamarinPrvoPredavanje.MainPage">

    <StackLayout>
        <Label FontSize="30" x:Name="FirstCheckbox" Text="Random text"/>
        <Label FontSize="30" x:Name="SecondCheckbox" Text="Random text"/>
