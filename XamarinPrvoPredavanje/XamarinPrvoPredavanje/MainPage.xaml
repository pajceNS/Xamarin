<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:XamarinPrvoPredavanje"
             x:Class="XamarinPrvoPredavanje.MainPage"
             x:DataType="local:MainViewModel">

    <StackLayout>
        <Label 
            FontSize="35"
            Text="{Binding LabelText}"/>
        <Button 
            Text="Button"
            Command="{Binding ButtonClickCommand}"/>
        <StackLayout Orientation="Horizontal">
            <Button
                Text="1"
                Command="{Binding NumericClickCommand}">
                <Button.CommandParameter>
                    <x:Int32>1</x:Int32>
                </Button.CommandParameter>
            </Button>
            <Button
                Text="2"
                Command="{Binding NumericClickCommand}">
                <Button.CommandParameter>
                    <x:Int32>2</x:Int32>
                </Button.CommandParameter>
            </Button>
            <Button
                Text="3"
                Command="{Binding NumericClickCommand}">
                <Button.CommandParameter>
                    <x:Int32>3</x:Int32>
                </Button.CommandParameter>
            </Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
